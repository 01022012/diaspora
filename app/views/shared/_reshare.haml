.reshare_pane
  %span.reshare_button
    = link_to t('.reshare'), "#"

  %ul.reshare_box
    - for aspect in current_user.aspects
      %li.aspect_to_share= link_to aspect, :controller => "aspects", :action => "show", :id => aspect.id, :prefill => post.message

