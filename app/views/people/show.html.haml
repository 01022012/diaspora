.span-4.append-1.last
  = render :partial => 'people/profile_sidebar', :locals => {:person => @person, :is_contact => @is_contact}

.span-15.last
  = render 'shared/author_info', :person => @person
  - if @contact || current_user.person == @person

    - if @posts.count > 0
      -if @post_type == :photos
        = render 'photos/index', :photos => @posts
      - else
        = render 'shared/stream', :posts => @posts
      = will_paginate @posts

    - else
      %h3= t('.no_posts')

  - else
    .floating
      %h3
        = t('.not_friends', :name => @person.real_name)
        
      - unless @pending_request
        %h3
          .description
            = t('.request_people')
         
        = form_tag(requests_path) do
          = select_tag(:aspect_id, @aspects_dropdown_array.join.html_safe)
          = hidden_field_tag :destination_handle, :value => @person.diaspora_handle
          = submit_tag t('.add_friend')

      - else
        %h3
          .description
            = t('.already_requested', :name => @person.real_name)
