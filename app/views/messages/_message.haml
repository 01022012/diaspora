.stream_element{:data=>{:guid=>message.id}}
  = person_image_link(message.author, :size => :thumb_small)

  .right
    %span.timeago= link_to(how_long_ago(message), status_message_path(message))

  .content
    %strong
      = person_link(message.author)

    .message
      = message.text

