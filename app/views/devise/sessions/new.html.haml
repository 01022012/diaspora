= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %p
    = f.label :email
    = f.text_field :email
  %p
    = f.label :password
    = f.password_field :password
  /%p
  /- if devise_mapping.rememberable?
  /  = f.check_box :remember_me
  /  = f.label :remember_me
  = f.submit "Sign in"
  %p
= render :partial => "devise/shared/links"

