.span-20.last
  %h1= "#{@author.username}"
  = link_to 'unsubscribe', @author, :confirm => 'Are you sure?', :method => :delete
.span-20
  - if @author_ostatus_posts

    %h3 stream
    %ul#stream
      - for post in @author_ostatus_posts
        = render type_partial(post), :post => post
  - else
    %h3 no posts to display!
