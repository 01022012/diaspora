- content_for :page_title do
  - if params[:tag]
    = "##{params[:tag]}"

  - else
    = t('.whatup', :pod => @pod_url)

- content_for :head do
  = include_javascripts :home

.span-24.last
  %h1
    - if params[:tag]
      = "##{params[:tag]}"

    - else
      = t('.whatup', :pod => @pod_url)

.span-15
  #main_stream.stream
    - if @fakes.length > 0
      = render 'shared/stream', :posts => @fakes
      %a.paginate
        = t("more")
    - else
      = t('.nobody_likes', :tag => "##{params[:tag]}")
  = will_paginate @posts

.prepend-2.span-7.last
  %h3
    = t('.people_tagged_with', :tag => "##{params[:tag]}")
  .side_stream
    = render :collection => @people, :partial => 'people/person'
